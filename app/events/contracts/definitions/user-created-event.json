{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "User Created Event",
  "description": "An event dispatched when a user is created.",
  "type": "object",
  "properties":{
    "name":{
      "length":3,
      "type":"string"
    },
    "email":{
      "length":10,
      "type":"email"
    },
    "password":{
      "length":8,
      "type":"password"
    },
    "country":{
      "length":2,
      "type":"string",
      "default":"USA"
    },
    "company":{
      "length":2,
      "type":"string"
    }
  },
  "required": [ "name", "email", "password" ]
}